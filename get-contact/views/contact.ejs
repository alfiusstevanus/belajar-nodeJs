<div class="container mt-5">
    <div class="row">
        <div class="col-md-8">
            <h2>Daftar Kontak</h2>
            <a href="/contact/add" class="btn btn-primary mb-4">Tambah Kontak</a>

            <table class="table mt-5">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Nama</th>
                        <th scope="col">NO HP</th>
                        <th scope="col">Aksi</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (contacts.length === 0) { %>
                    <tr>
                        <td colspan="4">
                            <div class="alert alert-danger" role="alert">
                                Data kontak <span class="fw-bold">kosong!</span>
                            </div>
                        </td>
                    </tr>
                    <% } %>
                    <% contacts.forEach((contact,i) => { i++ %>
                    <tr>
                        <th scope="row"><%= i++ %></th>
                        <td><%= contact.nama %></td>
                        <td><%= contact.noHP %></td>
                        <td><a href="contact/<%= contact.nama %>" class="btn btn-success badge rounde-pill"><i
                                    class="bi bi-info-circle"></i>
                                Detail</a></td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</div>