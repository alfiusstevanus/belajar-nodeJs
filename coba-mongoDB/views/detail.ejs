<div class="container mt-5">
    <div class="row">
        <div class="col-md-8">
            <h2>Detail Contact</h2>
            <% if (!contact) { %>
            <div class="alert alert-danger" role="alert">
                Data kontak <span class="fw-bold">tidak tersedia, </span>kembali <a href="#"
                    class="alert-link fw-normal">ke daftar kontak.</a>
            </div>
            <% } else { %>
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title"><%= contact.nama %></h5>
                    <h6 class="card-subtitle mb-2 text-body-secondary"><%= contact.noHP %></h6>
                    <p class="card-text"><%= contact.email %></p>
                    <a href="/contact/edit/<%= contact.nama %>" class="btn btn-primary badge">Edit</a>
                    <!-- <a href="/contact/delete/<%= contact.nama %>" class="btn btn-danger badge" -->
                    <!-- onclick="return confirm('Anda yakin akan menghapus data <%= contact.nama %> ?')">Hapus</a> -->
                    <form action="/contact?_method=DELETE" class="d-inline" method="POST">
                        <input type="hidden" name="nama" value="<%= contact.nama %>">
                        <button type="submit" class="btn btn-danger badge"
                            onclick="return confirm('Anda yakin akan menghapus data <%= contact.nama %> ?')">Hapus</button>
                    </form>
                    <a href="/contact" class="card-link d-block mt-5">&laquo; Daftar Kontak</a>
                </div>
            </div>
            <% } %>
        </div>
    </div>
</div>